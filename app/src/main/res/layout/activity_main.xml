<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.motwkel.miwok.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numbers"
        android:layout_weight="1"
        android:background="#c5f7aa"
        android:id="@+id/activity_numbers"
        android:gravity="center"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Colors"
        android:id="@+id/activity_colors"
        android:gravity="center"
        android:background="#b5fdfd"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Family"
        android:gravity="center"
        android:id="@+id/activity_familly"
        android:layout_weight="1"
        android:background="#c39ce9"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phrases"
        android:id="@+id/activity_phrases"
        android:gravity="center"
        android:layout_weight="1"
        android:background="#ecaf69"
        android:textSize="20sp"/>

</LinearLayout>
